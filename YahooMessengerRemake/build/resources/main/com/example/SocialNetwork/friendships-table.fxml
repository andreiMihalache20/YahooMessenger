<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox prefHeight="400.0" prefWidth="478.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.SocialNetwork.FriendshipsController">
    <children>
        <TableView fx:id="tableViewFriendship" prefHeight="400.0" prefWidth="350.0">
            <columns>
                <TableColumn fx:id="idFriend1" prefWidth="75.0" text="User1ID" />
                <TableColumn fx:id="idFriend2" prefWidth="75.0" text="User2ID" />
                <TableColumn fx:id="date" prefWidth="200.0" text="DATA" />
            </columns>
        </TableView>
        <VBox prefHeight="400.0" prefWidth="116.0">
            <children>
                <Label prefHeight="18.0" prefWidth="116.0" text="Friendship Info">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
                <TextField fx:id="idFriend1TextField" prefHeight="26.0" prefWidth="114.0" promptText="User1ID" />
                <TextField fx:id="idFriend2TextField" layoutX="10.0" layoutY="27.0" prefHeight="26.0" prefWidth="114.0" promptText="User2ID" />
                <Button alignment="CENTER" contentDisplay="CENTER" layoutX="3.0" mnemonicParsing="false" onAction="#onAddButtonClick" text="ADD" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets left="40.0" top="10.0" />
                    </VBox.margin>
                </Button>
                <Button alignment="CENTER" contentDisplay="CENTER" layoutX="3.0" mnemonicParsing="false" onAction="#onDeleteButtonClick" text="DELETE" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets left="33.0" top="10.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</HBox>
