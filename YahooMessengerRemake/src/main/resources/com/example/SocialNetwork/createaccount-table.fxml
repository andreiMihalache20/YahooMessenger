<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.SocialNetwork.CreateaccountController">
    <VBox alignment="CENTER" spacing="10">
        <HBox alignment="CENTER" VBox.vgrow="ALWAYS" />

        <HBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
            <AnchorPane prefHeight="430.0" prefWidth="554.0">
                <children>
                    <!-- Blue Rectangle -->
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#841fff" height="72.0" layoutY="-22.0" stroke="BLACK" strokeType="INSIDE" width="600.0" />

                    <!-- Form Elements -->
                    <TextField fx:id="lastNameTextField" layoutX="396.0" layoutY="165.0" prefHeight="34.0" prefWidth="138.0" promptText="LastName" />
                    <TextField fx:id="firstNameTextField" layoutX="397.0" layoutY="215.0" prefHeight="34.0" prefWidth="138.0" promptText="FirstName" />
                    <TextField fx:id="emailTextField" layoutX="397.0" layoutY="71.0" prefHeight="34.0" prefWidth="137.0" promptText="Email" />
                    <PasswordField fx:id="passwordTextField" layoutX="397.0" layoutY="119.0" prefHeight="34.0" prefWidth="138.0" promptText="Password" />
                    <!-- Create Account Button -->
                    <Button layoutX="413.0" layoutY="14.0" onAction="#onAddButtonClick" prefHeight="26.0" prefWidth="104.0" text="Create Account" />
                    <ImageView fitHeight="379.0" fitWidth="389.0" layoutX="-2.0" layoutY="51.0">
                        <image>
                            <Image url="@yahoomessenger.jpg" />
                        </image>
                    </ImageView>
                </children>
            </AnchorPane>
        </HBox>
    </VBox>
</AnchorPane>
